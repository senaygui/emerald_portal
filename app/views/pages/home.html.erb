<%provide(:title, "Home")%>
<link href="https://fonts.googleapis.com/css?family=Raleway:400,600,700" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
<style type="text/css">
  #particles-js {
    position: fixed;
    width: 100vw;
    height: 100vh;
    top: 0;
    left: 0;
    z-index: 0;
    pointer-events: none;
  }
  body{
  	background: #f5fbf7;
  }
  .wrapper{

  }
  .banner{
    max-width: 350px;
    width: 100%;
    height: auto;
    display: block;
    margin-left: auto;
    margin-right: auto;
    transition: max-width 0.3s;
  }

  /* Responsive logo size for larger screens */
  @media (min-width: 768px) {
    .banner {
      max-width: 500px;
    }
  }
  @media (min-width: 1200px) {
    .banner {
      max-width: 450px;
    }
  }

  /* Responsive card and content */
  .content {
    /* min-height: 100vh; */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .card-primary {
    box-shadow: 0 2px 16px rgba(0,0,0,0.08);
    border-radius: 10px;
    /* margin: 1rem auto;
    max-width: 100vw; */
  }
  @media (max-width: 575px) {
    .card-body.p-5 {
      padding: 1.5rem !important;
    }
    h1.text-center {
      font-size: 1.5rem;
    }
    .banner {
      width: 800px;
    }
  }



    h1 {
      display: block;
      font-size: 1.6em;
      margin-block-start: 0.67em;
      margin-block-end: 0.67em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
      font-weight: bold;
  }
  h1 {
      letter-spacing: .5px;
  }

  body, h1, h2, h3, p, button, input, select, textarea {
      font-family: 'Raleway', Arial, sans-serif;
  }
  h1.text-center {
    font-size: 2rem;
    line-height: 1.3;
    margin-bottom: 1.2rem;
  }
  .container.text-center p {
    font-size: 1.15rem;
    line-height: 1.7;
    margin-bottom: 2rem;
    color: #333;
  }
  .btn-nuf-gradient {
    background: linear-gradient(90deg, var(--brand-1) 0%, var(--brand-2) 100%);
    color: #fff !important;
    border: none;
    font-size: 1.25rem;
    font-weight: 600;
    padding: 0.85rem 0;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.07);
    transition: box-shadow 0.2s, transform 0.2s;
  }
  .btn-nuf-gradient:hover, .btn-nuf-gradient:focus {
    box-shadow: 0 4px 16px rgba(46,204,113,0.25);
    transform: translateY(-2px) scale(1.03);
    color: #fff;
  }
</style>
<div id="particles-js"></div>
<div class="content p-5 mt-3" style="position: relative; z-index: 1;">
  <div class="">
    <div class="row  justify-content-center">
      <div class="col-12 col-md-8">
        <div class="card  card-primary">
          <!-- <div class="card-header">
						<h3 class="card-title">
							<i class="fas fa-info-circle mr-2"></i>
							<strong>Instruction</strong>
						</h3>
					</div> -->
					<!-- /.card-header -->
					<div class="card-body p-5">
						<div class="d-flex justify-content-center">
							<%= image_tag("logo-emerald.png", class: "banner m-md-4")%>
						</div>
						
	        	<h1 class="text-center">Welcome To Emerald International College </h1>
	        	<div class="container text-center">
	        		<p class="justify-content">
		        	This is Emerald International College 's  registrar and school management portal system. To registrar click the << Continue >> button and register now.
	        		</p>
	        		<%=link_to "continue", admission_path, class: "btn btn-block btn-nuf-gradient btn-lg" %>
	        	</div>
	        
					</div>
					<!-- /.card-body -->
				</div>
			</div>
			
    </div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    if (window.particlesJS) {
      particlesJS("particles-js", {
        "particles": {
          "number": {
            "value": 300,
            "density": {
              "enable": true,
              "value_area": 900
            }
          },
          "color": {
            "value": ["#1ea54c", "#0a6d2a", "#ffffff"]
          },
          "shape": {
            "type": "circle",
            "stroke": {
              "width": 0,
              "color": "#000000"
            }
          },
          "opacity": {
            "value": 0.5,
            "random": true
          },
          "size": {
            "value": 4,
            "random": true
          },
          "line_linked": {
            "enable": true,
            "distance": 150,
            "color": "#1ea54c",
            "opacity": 0.7,
            "width": 2.8
          },
          "move": {
            "enable": true,
            "speed": 6.5,
            "direction": "none",
            "random": false,
            "straight": false,
            "out_mode": "out",
            "bounce": false
          }
        },
        "interactivity": {
          "detect_on": "canvas",
          "events": {
            "onhover": {
              "enable": true,
              "mode": "repulse"
            },
            "onclick": {
              "enable": true,
              "mode": "push"
            },
            "resize": true
          },
          "modes": {
            "repulse": {
              "distance": 100,
              "duration": 0.4
            },
            "push": {
              "particles_nb": 4
            }
          }
        },
        "retina_detect": true
      });
    }
  });
</script>
