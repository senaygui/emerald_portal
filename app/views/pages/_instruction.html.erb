<%if @notifcation.present? && current_student.account_status == "active"%>
  <div class="col-12">
    <div class="card card-<%= @notifcation.notification_card_color%> instruction-card" style="border-radius: 18px; box-shadow: 0 4px 24px rgba(0,0,0,0.10); overflow: hidden;">
        <div class="card-header d-flex align-items-center justify-content-between">
              <h3 class="card-title mb-0">
                <i class="fas fa-info-circle mr-2 animate__animated animate__tada animate__infinite"></i>
                <strong>Instruction</strong>
              </h3>
        </div>
        <div class="card-body" style="background: linear-gradient(90deg, #fffde7 60%, #fff 100%);">
              <div class="card-body p-2">
                <strong class="text-<%= @notifcation.notification_card_color%> text-center" style="font-size:1.15rem; letter-spacing:0.5px;"><%= @notifcation.notification_message %></strong>
              </div>
        </div>
        <div class="card-footer d-flex justify-content-center" style="background: #fffbe7;">
          <%if @notifcation.notification_action == "create"%>
          <%= button_to "Enroll Course", enroll_course_registrations_path, method: :post, class: "btn btn-#{@notifcation.notification_card_color} animate__animated animate__pulse animate__infinite mx-2", style: 'min-width:120px;' %>
          <%elsif @notifcation.notification_action == "pay" %>
            <%= link_to "Pay Now", invoice_path(@notifcation.notifiable.id), class: "btn btn-#{@notifcation.notification_card_color} animate__animated animate__pulse animate__infinite mx-2", style: 'min-width:120px;' %>
          <%end%>
        </div>
    </div>
  </div>
<%elsif current_student.account_status == "suspended" %>
  <div class="col-12">
    <div class="card card-danger instruction-card animate__animated animate__fadeInDown" style="border-radius: 18px; box-shadow: 0 4px 24px rgba(0,0,0,0.10); overflow: hidden;">
        <div class="card-header d-flex align-items-center justify-content-between" style="background: linear-gradient(90deg, #fffde7 60%, #ffcdd2 100%);">
              <h3 class="card-title mb-0">
                <i class="fas fa-info-circle mr-2 animate__animated animate__tada animate__infinite"></i>
                <strong>Instruction</strong>
              </h3>
              
        </div>
        <div class="card-body" style="background: linear-gradient(90deg, #d52626ff 60%, #fff 100%);">
              <div class="card-body p-2">
                <strong class="text-danger" style="font-size:1.15rem; letter-spacing:0.5px;">Your account is suspended due to unpaid bills or academic suspension. Contact registrar.</strong>
              </div>
        </div>
    </div>
  </div>
<%end%>

<%if current_student.invoices.present? && current_student.invoices.last.invoice_status == "approved"%>
  <%= render 'student_id'%>
<%end%>
<style>
  .instruction-card {
    border: 4px solid;
    border-radius: 18px;
    animation: borderColorCycle 2.5s linear infinite;
    box-shadow: 0 4px 24px rgba(0,0,0,0.10);
    margin-bottom: 1.2rem;
    transition: box-shadow 0.3s, border 0.3s;
  }
  .instruction-card:hover {
    box-shadow: 0 8px 32px rgba(0,0,0,0.18);
    border-color: #ffc107;
  }
</style>