<!-- app/views/student_copy/show.pdf.erb -->

<style>
  @page {
    size: A4;
    margin: 1in;
  }

  body {
    font-family: 'Georgia', serif;
    background: #fff;
    margin: 0;
    padding: 0;
    font-size: 28px; /* slightly reduced */
  }

  .certificate {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  /* .certificate {
    width: 210mm;
    height: 297mm;
    padding: 30mm;
    box-sizing: border-box;
    border: 1px solid #ccc;
    position: relative;
  } */

  .header {
    text-align: center;
    margin-bottom: 10px; /* reduced */
  }

  .header h2:first-child {
    color: #00794d;
    margin: 0;
    font-size: 22px;
  }

  .header h1 {
    color: #002060;
    margin: 5px 0;
    font-size: 40px;
  }

  .header h3 {
    font-size: 26px;
    font-weight: normal;
    margin: 10px 0 5px;
  }

  .title {
    text-decoration: underline;
    font-weight: bold;
    font-size: 30px;
    margin: 8px 0;
  }

  .content {
    text-align: center;
    line-height: 1.7; /* reduced */
    margin-top: 10px;
  }
  .content-text {
    font-size: 1.1em !important;
  }

  .content .student-name,
  .content .program {
    font-size: 32px;
    font-weight: bold;
    margin: 8px 0;
    text-decoration: underline;
  }

  .footer {
    text-align: center;
    margin-top: 10px;
  }

  .signature {
    margin-bottom: 10px;
    font-size: 24px;
  }

  .motto {
    color: #007ac1;
    font-style: italic;
    font-size: 20px;
  }

  .contact-banner {
    background-color:rgba(255, 234, 0, 0.29);
    border: 1px solidrgba(86, 109, 128, 0.32);
    padding: 10px 15px;
    max-width: 700px;
    margin: 20px auto;
    font-size: 12px;
    color: #0d47a1;
    line-height: 1.3;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
  }

    .contact-banner b {
      color: #1565c0;
    }

    .contact-banner a {
      color: #0d47a1;
      text-decoration: underline;
    }

    .contact-banner .icon {
      font-style: normal;
      margin-right: 4px;
    }

    .contact-line {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
      gap: 10px;
    }
</style>


<div class="certificate">
  <div class="header">
    <%= image_tag wicked_pdf_asset_base64('logo.jpg'), alt: "Hope Enterprise's University College", style: 'max-height: 150px;' %>
    <h1>Hope Enterprise University College</h1>
    <h3>OFFICE OF THE REGISTRAR</h3>
    <div class="contact-banner">
      <div><b>Hope Enterprise University College</b></div>
      <div>Lafto Sub-City, Kebele 01, Lebu Campus</div>

      <div class="contact-line">
        <span class="icon"><i class="fas fa-phone"></i></span>
        Main Office: +251-118-959786 /
        Admission: +251-118-959285
        <span class="icon"><i class="fas fa-fax"></i></span>P.Box: 12382
      </div>

      <div class="contact-line">
        <i class="fas fa-globe"></i>Website: <a href="http://www.heuc.edu.et" target="_blank">www.heuc.edu.et</a> |
        <i class="fas fa-envelope"></i>E-mail: <a href="mailto:info@heuc.edu.et">info@heuc.edu.et</a> |
        Addis Ababa, Ethiopia
      </div>
    </div>
  </div>
  
  <div class="content">
    <h2 class="title">TEMPORARY CERTIFICATE OF GRADUATION</h2>
    <p class="content-text">This is to certify that</p>
    <p class="student-name"><%= @graduate_student.full_name %></p>

    <p class="content-text" >Graduated from Hope Enterprise University College</p>
    <p class="content-text">With</p>
    <p class="program"><%= @graduate_student.program&.program_name %></p>
    <p><strong>On <%= @graduate_student.updated_at.strftime('%d %B, %Y') %></strong></p>

    <p class="content-text">This certificate of graduation has been given pending the printing
       and issuance of actual diploma.</p>
  </div>

  <div class="footer">
    <div class="signature">
      _____________________________________________________<br>
      <strong>Registrar</strong>
    </div>
    <br  />
    <p class="motto">Developing Leadership for a World of Hope</p>
  </div>
</div>

