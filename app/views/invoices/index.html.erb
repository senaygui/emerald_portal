<%provide(:title, "Payment History")%>
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1>My Invoices</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active">Payments</li>
        </ol>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>
<div class="col-12 col-md-12">
  <div class="card card-primary">
    <div class="card-header bg-primary text-white">
      <h3 class="card-title">Payment History</h3>
    </div>
    <div class="card-body">
      <% if @invoices.any? %>
      <div class="table-responsive">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Invoice Number</th>
              <th>Mode of Payment</th>
              <th>Paid Amount</th>
              <th>Status</th>
              <th>#</th>
            </tr>
          </thead>
          <tbody>
            <% @invoices.each do |sm| %>
              <tr>
                <td><%= sm.invoice_number %></td>
                <td><%= sm.payment_transaction.payment_method&.bank_name || 'N/A'%></td>
                <td><%= sm.total_price.round(2) %> ETB</td>
                <td>
                  <% status_class = case sm.invoice_status.to_s.downcase
                    when 'approved' then 'badge badge-success'
                    when 'pending' then 'badge badge-warning'
                    when 'overdue' then 'badge badge-danger'
                    when 'denied' then 'badge badge-secondary'
                    else 'badge badge-info'
                  end %>
                  <span class="<%= status_class %>"><%= sm.invoice_status.capitalize %></span>
                </td>
                <td class="actions">
                  <%= link_to("View", invoice_path(sm), :class => 'btn-sm btn-primary') %>
                  <%= link_to("pay", invoice_path(sm), :class => 'btn-sm btn-danger') if sm.invoice_status == 'pending' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <% else %>
        <div class="alert alert-info">
          <h5><i class="icon fas fa-info"></i> No Invoices Found</h5>
          <p>You haven't received any invoices yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.card {
  box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
  margin-bottom: 1rem;
}
.card-header {
  padding: 0.75rem 1.25rem;
  margin-bottom: 0;
  background-color: rgba(0,0,0,.03);
  border-bottom: 1px solid rgba(0,0,0,.125);
}
.table th {
  background-color: #f8f9fa;
  font-weight: 600;
}
.btn-group {
  display: flex;
  gap: 0.25rem;
}
.btn-sm {
  padding: 0.25rem 0.5rem;
  font-size: 0.875rem;
}
.badge {
  font-size: 0.875rem;
  padding: 0.35em 0.65em;
}
.alert {
  margin-bottom: 0;
}
.card-footer {
  background-color: rgba(0,0,0,.03);
  border-top: 1px solid rgba(0,0,0,.125);
  padding: 0.75rem 1.25rem;
}
@media (max-width: 768px) {
  .table-responsive {
    border: 0;
  }
  .table-responsive thead {
    display: none;
  }
  .table-responsive tbody tr {
    display: block;
    margin-bottom: 1rem;
    border: 1px solid #dee2e6;
  }
  .table-responsive tbody td {
    display: block;
    text-align: right;
    padding: 0.75rem;
    border: none;
  }
  .table-responsive tbody td::before {
    content: attr(data-label);
    float: left;
    font-weight: bold;
  }
}
</style>
