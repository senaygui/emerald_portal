<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12 col-md-12">
        <div class="card card-primary lms-card animate__animated animate__fadeInUp" style="border-radius: 18px; box-shadow: 0 4px 24px rgba(0,0,0,0.10); overflow: hidden;">
          <div class="card-header d-flex align-items-center justify-content-between" style="background: linear-gradient(90deg, #1565c0 70%, #1976d2 100%); color: #fff;">
            <h3 class="card-title mb-0"><i class="fas fa-user-lock mr-2 text-warning animate__animated animate__tada animate__infinite"></i>Student LMS Credential</h3>
          </div>
          <div class="card-body" style="background: #f5f7fa; color: #212529;">
            <div class="row">
              <div class="col-12 col-md-12">
                <ul class="list-group list-group-unbordered mb-3">
              <li class="list-group-item mx-3" style="background: #e3f0ff; color: #212529; border-radius: 8px;">
                <b><i class="fas fa-id-badge mr-1 text-primary"></i>Student ID</b> <a class="float-right" style="color: #0d47a1;"><%= current_student.student_id.present? ? current_student.student_id : "Not Assigned Yet"%></a>
              </li>
              <li class="list-group-item mx-3" style="background: #e3f0ff; color: #212529; border-radius: 8px;">
                <b><i class="fas fa-key mr-1 text-primary"></i>Password</b> <a class="float-right" style="color: #0d47a1;"><%= current_student.student_password.present? ? current_student.student_password : "Not Assigned Yet"%></a>
              </li>
            </ul>
                <%= link_to "Go to Learning Platform", "https://www.nuf.edu.et/", class: "btn btn-warning animate__animated animate__pulse animate__infinite mx-2", style: 'min-width:180px; font-size:1.1rem; font-weight:600; color: #212529;' %>
              </div>
            </div>
          </div>
        </div>
<style>
  .lms-card {
    border-radius: 18px;
    box-shadow: 0 4px 24px rgba(0,0,0,0.10);
    margin-bottom: 1.2rem;
    transition: box-shadow 0.3s, border 0.3s;
    background: #fff;
  }
  .lms-card:hover {
    box-shadow: 0 8px 32px rgba(0,0,0,0.18);
    border-color: #1565c0;
  }
</style>
      </div>
    </div>
  </div>
</section>
