<%provide(:title, "Sign Up")%>
<style type="text/css">
  * {box-sizing: border-box;}
  body {background-color: #f5fbf7;}
  h1 {text-align: center; }
  .fixed-submit {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100vw;
    z-index: 9999;
    background: rgba(255,255,255,0.95);
    box-shadow: 0 -2px 8px rgba(0,0,0,0.07);
    padding: 18px 40px 18px 0;
    margin: 0;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }
  /* Enhanced card styles */
  .card.card-primary {
    background: linear-gradient(135deg, #f8fafc 0%, #e8f9ef 100%);
    border-radius: 18px;
    box-shadow: 0 6px 32px 0 rgba(10,109,42,0.10), 0 1.5px 6px 0 rgba(46,204,113,0.12);
    border: none;
    transition: box-shadow 0.3s, transform 0.2s;
  }
  .card.card-primary:hover {
    box-shadow: 0 12px 48px 0 rgba(10,109,42,0.18), 0 3px 12px 0 rgba(46,204,113,0.18);
    transform: translateY(-2px) scale(1.01);
  }
  .card-header {
    background: linear-gradient(90deg, var(--brand-1) 0%, var(--brand-2) 100%);
    color: #fff;
    border-radius: 18px 18px 0 0;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    border: none;
    padding-top: 18px;
    padding-bottom: 18px;
  }
  .card-title {
    font-size: 1.35rem;
    font-weight: 700;
    letter-spacing: 0.5px;
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .card-body {
    background: #fff;
    border-radius: 0 0 18px 18px;
    padding: 1.5rem 1.5rem 1rem 1.5rem;
    color: #222;
  }
  /* Interactive instruction card */
  .card.card-primary .card-body p strong {
    color: var(--brand-3);
    font-size: 1.08em;
  }
  .card.card-primary .card-body ol.text-muted li {
    background: #ffffffff;
    border-radius: 8px;
    margin-bottom: 7px;
    padding: 7px 12px;
    transition: background 0.2s;
  }
  .card.card-primary .card-body ol.text-muted li:hover {
    background: #e9f7ef;
    color: var(--brand-1);
  }
  .card.card-primary .card-body hr {
    border-top: 2px solid var(--brand-3);
    width: 60%;
    margin: 18px auto 10px auto;
    opacity: 0.5;
  }
  /* Add a little animation to the info icon */
  .fa-info-circle {
    animation: info-bounce 1.5s infinite alternate;
  }
  @keyframes info-bounce {
    0% { transform: translateY(0); }
    100% { transform: translateY(-3px); }
  }
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/icheck-bootstrap/3.0.1/icheck-bootstrap.min.css" integrity="sha512-8vq2g5nHE062j3xor4XxPeZiPjmRDh6wlufQlfC6pdQ/9urJkU07NM0tEREeymP++NczacJ/Q59ul+/K2eYvcg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="content-wrapper mt-3" style="min-height: 1477.62px;">
  <div class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                <i class="fas fa-edit"></i>
                New Student Admission Forms
              </h3>
            </div>
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),wrapper: :input_group, multiple: true) do |f| %>
              <div class="card-body p-0">
                <div class="">
                  
                    <div class="content m-3">
                      <div class="row">
                          
                          <div class="col-12 col-md-3">
                            <div class="row">
                              <div class="col-12">
                                <%= render "students/shared/error_messages", resource: resource %>
                              </div>
                              <div class="col-12">
                                <div class="card  card-primary">
                                  <div class="card-header">
                                    <h3 class="card-title">
                                      <i class="fas fa-info-circle mr-2"></i>
                                      <strong>Instruction</strong>

                                    </h3>
                                  </div>
                                  <!-- /.card-header -->
                                  <div class="card-body">
                                    <p  class="text-center"><strong>Fill in the space(s) or Select the appropriate box(es) or selctions. * fields are required.</strong></p>  
                                    <p class="text-muted text-center">
                                      You must provide your address information on the fields provided. Once you fill all the required feilds hit the Continue button.
                                    </p>
                                    <hr>
                                  </div>
                                  <!-- /.card-body -->
                                </div>
                                <div class="card  card-primary">
                                  <div class="card-header">
                                    <h3 class="card-title">
                                      <i class="fas fa-info-circle mr-2"></i>
                                      <strong>Photo Instruction</strong>

                                    </h3>
                                  </div>
                                  <!-- /.card-header -->
                                  <div class="card-body">
                                    <p  class="text-center"><strong>We recommend you use a  passport size photo (5x5) to ensure your photo meets all the requirements.</strong></p>  
                                    <p class="text-muted text-center">
                                     <ol class="text-muted">
                                      <li>Taken within the last 6 months to reflect your current appearance</li>
                                      <li>With a neutral facial expression and both eyes open</li>
                                      <li>Taken in clothing that you normally wear on a daily basis</li>
                                    
                                     </ol>
                          
                                    </p>
                                    <hr>
                                  </div>
                                  <!-- /.card-body -->
                                </div>
                              </div>
                            </div>
                            
                          </div>
                          <div class="col-12 col-md-9">
                            <%= render 'basic', f: f %>
                            <div class="fixed-submit">
                              <%= f.button :submit, "Register Now", class: "btn btn-brand btn-lg", id: "student-submit", title: "Fill the required form fields" %>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
              </div>
            <%end%>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
      </div>
    </div>
  </div>
</div>


