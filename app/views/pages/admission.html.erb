<% provide(:title, "Admission") %>
<link href="https://fonts.googleapis.com/css?family=Raleway:400,600,700" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
<div id="particles-js"></div>
<style type="text/css">
  body {
    background: #f0f0f0;
    font-family: 'Raleway', Arial, sans-serif;
  }

  .banner {
    width: 350px;
    height: 200px;
  }

  h1 {
    font-size: 2em;
    font-weight: bold;
    letter-spacing: .5px;
  }

  h2 {
    font-size: 1.75em;
    font-weight: 600;
    margin-bottom: 2rem;
    text-align: center;
  }

  .card {
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    background-color: #ffffff;
  }

  .card-header {
    background-color: #036696;
    color: #ffffff;
    border-radius: 10px 10px 0 0;
    padding: 1rem;
    display: flex;
    align-items: center;
  }

  .card-header .card-title {
    margin: 0;
    font-size: 1.5rem;
  }

  .card-body {
    padding: 2rem;
  }

  .icon-box-link {
    display: block;
    text-decoration: none;
  }

  .icon-box {
    margin-bottom: 20px;
    padding: 30px 20px;
    border-radius: 12px;
    background: linear-gradient(135deg, #077b3f 0%, #036696 100%);
    transition: box-shadow 0.3s, transform 0.3s, background 0.3s;
    text-align: center;
    color: #fff;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(3,102,150,0.08);
    border: 2px solid transparent;
    position: relative;
    z-index: 1;
  }

  .icon-box h4 {
    font-weight: 700;
    font-size: 20px;
    color: #fff;
    margin-top: 10px;
    transition: color 0.3s;
  }

  .icon-box:hover, .icon-box:focus {
    background: linear-gradient(135deg, #036696 0%, #077b3f 100%);
    box-shadow: 0 8px 24px rgba(3,123,63,0.18);
    transform: translateY(-4px) scale(1.03);
    border-color: #077b3f;
    color: #fff;
  }

  .icon-box:active {
    background: #036696;
    border-color: #077b3f;
    color: #fff;
  }

  .icon-box-link:focus .icon-box,
  .icon-box-link:hover .icon-box {
    outline: none;
    box-shadow: 0 8px 24px rgba(3,123,63,0.18);
  }

  .icon-box p {
    margin-top: 10px;
    line-height: 24px;
    font-size: 14px;
  }

  .alumni-sidebar-list .list-group-item {
    border: none;
    border-bottom: 1px solid #eee;
    background: #fff;
    padding: 1rem 1.5rem;
    font-size: 1rem;
    transition: background 0.2s;
  }
  .alumni-sidebar-list .list-group-item:last-child {
    border-bottom: none;
  }
  .alumni-sidebar-list .list-group-item a {
    text-decoration: none;
    display: block;
  }
  .alumni-sidebar-list .list-group-item:hover {
    background: #f8f9fa;
  }
  @media (max-width: 991.98px) {
    .alumni-sidebar-list .list-group-item {
      padding: 0.75rem 1rem;
      font-size: 0.95rem;
    }
  }
  @media (max-width: 767.98px) {
    .alumni-sidebar-list {
      margin-bottom: 2rem;
    }
    .col-lg-3, .col-md-4 {
      width: 100%;
      max-width: 100%;
      flex: 0 0 100%;
    }
    .col-lg-9, .col-md-8 {
      width: 100%;
      max-width: 100%;
      flex: 0 0 100%;
    }
  }
  .icon-box-regular-degree {
    background: linear-gradient(135deg, #077b3f 0%, #36d1c4 100%);
  }
  .icon-box-regular-masters {
    background: linear-gradient(135deg, #e53935 0%, #ff6f00 100%);
    color: #fff;
  }
  .icon-box-regular-masters h4 {
    color: #fff;
  }
  .icon-box-extension-degree {
    background: linear-gradient(135deg, #f7971e 0%, #ffd200 100%);
    color: #333;
  }
  .icon-box-extension-degree h4 {
    color: #333;
  }
</style>

<div class="content mt-5" style="position: relative; z-index: 1;">
  <div class="container-fluid">
    <div class="row justify-content-center">
      <!-- Main Admission Content -->
      <div class="col-12 col-lg-8 col-md-8">
        <div class="card card-primary" style="background: linear-gradient(120deg, #009fe3 0%, #ff9900 100%); box-shadow: 0 4px 24px rgba(0,159,227,0.08); border: none;">
          <div class="card-header" style="background: linear-gradient(90deg, #009fe3 0%, #ff9900 100%); color: #fff; border-radius: 10px 10px 0 0;">
            <h3 class="card-title">
              <i class="fas fa-info-circle mr-2"></i>
              <strong>Instruction</strong>
            </h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body" style="background: rgba(255,255,255,0.95); border-radius: 0 0 10px 10px;">
            <h2 style="color: #009fe3; font-weight: 700;">In What Level Of Training  Do You Want To Enroll?</h2>
            <div class="row justify-content-center">
              <% @programs.each_with_index do |program, idx| %>
                <% card_bg = idx.even? ? 'background: linear-gradient(135deg, #36d1c4 0%, #009fe3 100%);' : 'background: linear-gradient(135deg, #ff9900 
                  0%, #f7971e 100%); color: #333;' %>
                <div class="col-lg-5 col-md-6 mb-4">
                  <%= link_to new_student_registration_path(program_id: program.id), data: { turbo: false, turbolinks: false }, class: 'icon-box-link' do %>
                    <div class="icon-box" style="<%= card_bg %>">
                      <h4><%= program.program_name %></h4>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          <!-- /.card-body -->
        </div>
      </div>
      
    </div>
  </div>
</div>

<script>
  function loadParticles() {
    if (window.pJSDom && window.pJSDom.length) {
      // Destroy previous instance if exists
      window.pJSDom[0].pJS.fn.vendors.destroypJS();
      window.pJSDom = [];
    }
    if (window.particlesJS) {
      particlesJS("particles-js", {
        "particles": {
          "number": {
            "value": 300,
            "density": {
              "enable": true,
              "value_area": 900
            }
          },
          "color": {
            "value": ["#009fe3", "#ff9900", "#ffffff"]
          },
          "shape": {
            "type": "circle",
            "stroke": {
              "width": 0,
              "color": "#000000"
            }
          },
          "opacity": {
            "value": 0.5,
            "random": true
          },
          "size": {
            "value": 4,
            "random": true
          },
          "line_linked": {
            "enable": true,
            "distance": 150,
            "color": "#009fe3",
            "opacity": 0.7,
            "width": 2.8
          },
          "move": {
            "enable": true,
            "speed": 6.5,
            "direction": "none",
            "random": false,
            "straight": false,
            "out_mode": "out",
            "bounce": false
          }
        },
        "interactivity": {
          "detect_on": "canvas",
          "events": {
            "onhover": {
              "enable": true,
              "mode": "repulse"
            },
            "onclick": {
              "enable": true,
              "mode": "push"
            },
            "resize": true
          },
          "modes": {
            "repulse": {
              "distance": 100,
              "duration": 0.4
            },
            "push": {
              "particles_nb": 4
            }
          }
        },
        "retina_detect": true
      });
    }
  }
  document.addEventListener("DOMContentLoaded", loadParticles);
  document.addEventListener("turbolinks:load", loadParticles);
</script>
<style>
  #particles-js {
    position: fixed;
    width: 100vw;
    height: 100vh;
    top: 0;
    left: 0;
    z-index: 0;
    pointer-events: none;
  }
</style>
